#!/usr/bin/env node

var express = require('express'),
    app = express(),
    expressLess = require('express-less')
;

app.use('/css', expressLess('./less', {
  debug: true
}));

app.use('/src', express.static('./src'));

app.use(express.static('./public'));

console.log('Test server started on 3050');
app.listen(3050);
